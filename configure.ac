AC_PREREQ(2.53)

AC_INIT([sugar-artwork],[0.98.2],[],[sugar-artwork])

AM_CONFIG_HEADER(config.h)

AM_INIT_AUTOMAKE([1.9 foreign dist-bzip2 no-dist-gzip])

AM_MAINTAINER_MODE
AM_DISABLE_STATIC

PKG_PROG_PKG_CONFIG([0.19])

GNOME_COMPILE_WARNINGS(maximum)

AC_PROG_CC
AC_HEADER_STDC
AC_PROG_LIBTOOL

PKG_CHECK_MODULES(GTK2, gtk+-2.0 >= 2.16.0,,
	          AC_MSG_ERROR([GTK+-2.0 is required to compile sugar-artwork]))

PKG_CHECK_MODULES(ENGINE, gtk+-2.0 >= 2.16 gobject-2.0 >= 2.0 cairo >= 0.1.1)

GTK_VERSION=`$PKG_CONFIG --variable=gtk_binary_version gtk+-2.0`
AC_SUBST(GTK_VERSION)

ICON_NAMING_UTILS_REQUIRED=0.8.2

AC_OUTPUT([
Makefile
gtk/Makefile
gtk/engine/Makefile
gtk/theme/Makefile
])
